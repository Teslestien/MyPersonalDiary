<Window x:Class="MyPersonalDiary.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Value" Height="400" Width="400">
    <Viewbox>
        <StackPanel>
            <TextBlock FontSize="40" Text="Enter new Value" HorizontalAlignment="Center" Margin="10"/>
            <TextBox FontSize="40" x:Name="ResponseTextBox" Width="300" Margin="10"/>
            <Button FontSize="30" Content="OK" Click="ButtonClick" Width="50" Margin="10"/>
        </StackPanel>
    </Viewbox>
</Window>
